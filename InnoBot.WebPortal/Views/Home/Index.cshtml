@{
    ViewData["Title"] = "Innowise Meetup";
}

<div class="row">
    <div class="col-sm-7">
        <div class="row">
            <div class="h2" style="color:white;">Questions</div>
        </div>
        <div class="row tabs" id="questions-tabs">
            <ul class="nav tabs__caption" id="questionsTab" role="tablist">
                <li class="active">
                    <a class="nav-link active" id="topic1-tab" data-toggle="tab" href="#topic1" role="tab" aria-controls="topic1" aria-selected="true">Topic 1</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="topic2-tab" data-toggle="tab" href="#topic2" role="tab" aria-controls="topic2" aria-selected="false">Topic 2</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="topic3-tab" data-toggle="tab" href="#topic3" role="tab" aria-controls="topic3" aria-selected="false">Topic 3</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane tabs__content active">
                    <div class="messages-container" id="questions-container">
                        @if (ViewBag.Questions != null && ViewBag.Questions.Count > 0)
                        {
                            foreach (QuestionModel question in ViewBag.Questions)
                            {
                                <div class="media message">
                                    <img src="~/content/person.png" class="mr-3" alt="...">
                                    <div class="media-body">
                                        <h5 class="mt-0">@question.AuthorName</h5>
                                        @question.QuestionText <br />
                                        <span class="message-date float-right">@question.Asked.ToString("hh:mm yyyy/MM/dd")</span>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
                <div class="tab-pane tabs__content">
                    
                    <div class="messages-container">
                        <p>sdfsdfsdfsdf</p>
                       </div>
                </div>
                <div class="tab-pane tabs__content">
                    <div class="messages-container" id="questions-container">
                        @if (ViewBag.Questions != null && ViewBag.Questions.Count > 0)
                        {
                            foreach (QuestionModel question in ViewBag.Questions)
                            {
                                <div class="media message">
                                    <img src="~/content/person.png" class="mr-3" alt="...">
                                    <div class="media-body">
                                        <h5 class="mt-0">@question.AuthorName</h5>
                                        @question.QuestionText <br />
                                        <span class="message-date float-right">@question.Asked.ToString("hh:mm yyyy/MM/dd")</span>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-1"></div>
    <div class="col-sm-4">
        <div class="h2" style="color:white;">Feedbacks</div>
        <div class="messages-container" id="feedbacks-container">
            @if (ViewBag.Feedbacks != null && ViewBag.Feedbacks.Count > 0)
            {
                foreach (FeedbackModel feedback in ViewBag.Feedbacks)
                {
                <div class="media message">
                    <img src="~/content/person.png" class="mr-3" alt="...">
                    <div class="media-body text-justify">
                        <h5 class="mt-0">@feedback.AuthorName</h5>
                        @feedback.Message
                        <h6 class="mt-1">Future Proposal:</h6>
                        @feedback.FutureProposal<br />
                        <span class="message-date float-right">@feedback.Sent.ToString("hh:mm yyyy/MM/dd")</span>
                    </div>
                </div>
                }
            }
        </div>
    </div>
</div>